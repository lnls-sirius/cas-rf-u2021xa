[Unit]
Description=Sirius RF U2021XA Power Meter 2 - Visa Interface
Wants=network-online.target
After=network-online.target

[Service]
Restart=always
RestartSec=10
Type=simple

WorkingDirectory=/opt/cas-rf-u2021xa/scripts
ExecStart=/bin/python3 /opt/cas-rf-u2021xa/scripts/run.py\
     --resource 'USB0::2391::32536::MY57380004::0::INSTR'\
     --unix-socket-path 'socket-2'

StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
