record(waveform, "$(P)$(R)TracData-Mon"){
    field(DESC, "Trace data")
    field(EGU, "dBm")
    field(SCAN, "5 second")
    field(DTYP, "stream")
    field(INP,  "@devU2021XA.proto getTracData $(PORT) $(A)")
    field(FTVL, "FLOAT")
    field(NELM, "26000")
}

record(acalcout, "$(P)$(R)TracDataScale"){
    field(EGU, "s")
	field(DESC, "x scale in seconds")
	field(CALC, "(B#0)?(IX*A/B):0")

    field(INPA, "$(P)$(R)TracTime-RB CP")
    field(INPB, "$(P)$(R)TracData-Mon.NORD CP")

	field(NELM, "26000")
}

record(bi, "$(P)$(R)VisaResource-RB:Timer"){
    field(SCAN, "10 second")
    field(FLNK, "$(P)$(R)VisaResource-RB")
}
record(waveform, "$(P)$(R)VisaResource-RB"){
    field(DESC, "Visa resource to be connected at")
    field(NELM, "200")
    field(FTVL, "UCHAR")
    field(DTYP, "stream")
    field(INP,  "@devU2021XA.proto getResource(199) $(PORT) $(A)")
}
record(stringout, "$(P)$(R)VisaResource-SP"){
    field(DESC, "Visa resource to be connected at")
    field(DTYP, "stream")
    field(OUT,  "@devU2021XA.proto setResource $(PORT) $(A)")

    field(FLNK, "$(P)$(R)VisaResource-RB")
}

record(waveform, "$(P)$(R)VisaResources-Mon"){
    field(SCAN, "10 second")
    field(DESC, "Visa res connected to the host machine")
    field(NELM, "200")
    field(FTVL, "UCHAR")
    field(DTYP, "stream")
    field(INP,  "@devU2021XA.proto getResources(199) $(PORT) $(A)")
}

record(waveform, "$(P)$(R)InstrInfo-Mon"){
    field(DESC, "General info about the instrument")
    field(SCAN, "10 second")
    field(DTYP, "stream")
    field(NELM, "200")
    field(FTVL, "UCHAR")
    field(INP,  "@devU2021XA.proto getInstrInfo(199) $(PORT) $(A)")
}

record(bi, "$(P)$(R)TracTime-RB:Timer"){
    field(SCAN, "10 second")
    field(FLNK, "$(P)$(R)TracTime-RB")
}

record(ai, "$(P)$(R)TracTime-RB"){
    field(EGU,  "s")
    field(DESC, "Duration of the trace")
    field(DTYP, "stream")
    field(PREC, "2")
    field(INP,  "@devU2021XA.proto getTracTime $(PORT) $(A)")
}

record(ao, "$(P)$(R)TracTime-SP"){
    field(DESC, "TRAC:TIME used to acquire data")
    field(DTYP, "stream")
    field(PREC, "2")
    field(OUT,  "@devU2021XA.proto setTracTime $(PORT) $(A)")

    field(FLNK, "$(P)$(R)TracTime-RB")
}

record(stringin, "$(P)$(R)IDN-Mon"){
    field(SCAN, "10 second")
    field(DESC, "SCPI identification string")
#    field(NELM, "200")
#    field(FTVL, "UCHAR")
    field(DTYP, "stream")
    field(INP,  "@devU2021XA.proto query(199,*IDN?) $(PORT) $(A)")
}

record(stringout, "$(P)$(R)InstrDisconnect-Cmd"){
    field(DTYP, "stream")
    field(OUT,  "@devU2021XA.proto instrDisconnect $(PORT) $(A)")
}

record(bi, "$(P)$(R)AutoReconnect-Enbl"){
    field(DESC, "Enable auto reconnect")
    field(VAL, "1")
    field(PINI, "YES")
}

record(scalcout, "$(P)$(R)AutoReconnectTrigg"){
    field(CALC, "((AA='INSTR_DISCONNECTED')&A)")
    field(INAA, "$(P)$(R)IDN-Mon CP")
    field(INPA, "$(P)$(R)AutoReconnect-Enbl CP")
}

record(seq, "$(P)$(R):ConfigComm"){
    field(DESC, "Configure device")
    field(SCAN, "10 second")
    field(PINI, "YES")

    field(DLY1, "1")
    field(DOL1, "1")
    field(LNK1, "$(P)$(R)InstrDisconnect-Cmd.PROC")

    field(DLY2, "1")
    field(DOL2, "1")
    field(LNK2, "$(P)$(R)InstrConnect-Cmd.PROC")

    field(DLY3, "1")
    field(DOL3, "1")
    field(LNK3, "$(P)$(R)InstrConfig-Cmd.PROC")

    field(DISV, "0")
    field(SDIS, "$(P)$(R)AutoReconnectTrigg CP")

}
record(stringout, "$(P)$(R)InstrConnect-Cmd"){
    field(DTYP, "stream")
    field(OUT,  "@devU2021XA.proto instrConnect(199) $(PORT) $(A)")
}

record(stringout, "$(P)$(R)InstrConfig-Cmd"){
    field(DTYP, "stream")
    field(OUT,  "@devU2021XA.proto instrConfig $(PORT) $(A)")
}

