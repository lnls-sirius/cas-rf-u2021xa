# Simple database and stream protocol file for basic SCPI (IEEE488.2) commands
record(stringout, "DEBUG"){
    field(DTYP, "stream")
    field(OUT,  "@devU2021XA.proto debug $(PORT) $(A)")
}
record(waveform, "DEBUG:WF"){
    field(SCAN, "5 second")
    field(DTYP, "stream")
    field(INP,  "@devU2021XA.proto getWf $(PORT) $(A)")
    field(FTVL, "FLOAT")
    field(NELM, "26000")
}

# Short and long form of identification string
record(stringin, "$(P)$(R)IDN"){
    field(DESC, "SCPI identification string")
    field(DTYP, "stream")
    field(INP,  "@devU2021XA.proto getIDN(39) $(PORT) $(A)")
    field(PINI, "YES")
}
record(waveform, "$(P)$(R)IDNwf"){
    field(DESC, "SCPI identification string")
    field(DTYP, "stream")
    field(INP,  "@devU2021XA.proto getIDN(199) $(PORT) $(A)")
    field(PINI, "YES")
    field(FTVL, "CHAR")
    field(NELM, "200")
}

